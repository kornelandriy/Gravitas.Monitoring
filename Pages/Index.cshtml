@page
@using Gravitas.Monitoring.Constants
@model IndexModel
@inject SignInManager<IdentityUser> SignInManager
@{
	ViewData["Title"] = "Home page";
	string Groups = "";
}

<div class="text-center">
	<h1 class="display-4">Адмін панель</h1>
	@if (SignInManager.IsSignedIn(User))
	{
		@if (User.IsInRole(UserRoles.Admin))
		{
			Groups += "Адміністратори<br />";
			<div>
				@*<a asp-area="" asp-page="/Monitoring/ViewAuthorized">Тільки для адміна</a>*@
			</div>
		}

		@if (User.IsInRole(UserRoles.User))
		{
			Groups += "Користувачі<br />";
			<br />

			<br />
			<div class="yozhstyle1" style="display:inline-block;">
				@*<a asp-area="" asp-page="/Monitoring/ViewAuthorized">Тільки для простого користувача</a>*@
				<a href="./CarList" class="display-2 btn btn-primary">Авто</a>
				<a href="./CardList" class="display-2 btn btn-primary">Картки</a>
				<a href="./Nodes" class="display-2 btn btn-primary">Вузли</a>
			</div>
		}

		@if (User.IsInRole(UserRoles.Modifier))
		{
			Groups += "Редактори<br />";

		}
	}
</div>
<div>
	@if (Groups != "")
	{
		<div>
			Ви є учасником груп:<br /><br />
			@Html.Raw(Groups)
		</div>
	}
	else
	{
		<div>
			<br /><br />
			Вам ще не назначено групу...
		</div>
	}
</div>
