@page
@model Gravitas.Monitoring.Pages.TestControlsModel

@using Gravitas.Monitoring.Models;
@{
	ViewData["Title"] = "Create New Ticket";
}
<h1>Create New Ticket</h1>
<h4>ticket</h4>
<hr />
@foreach (var tas in Model.TicketsList)
{
	<div class="row">
		<div class="col-md-4">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div class="form-group">
				<label asp-for="@tas.Id" class="control-label"></label>
				<input asp-for="@tas.Id" class="form-control" />
				<span asp-validation-for="@tas.Id" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@tas.TicketContainerId" class="control-label"></label>
				<input asp-for="@tas.TicketContainerId" class="form-control" />
				<span asp-validation-for="@tas.TicketContainerId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="@tas.StatusId" class="control-label"></label>
				<input asp-for="@tas.StatusId" class="form-control" />
				<span asp-validation-for="@tas.StatusId" class="text-danger"></span>
			</div>

			<div class="form-group">
				<label asp-for="@tas.RouteTemplateId" class="control-label"></label>
				<input asp-for="@tas.RouteTemplateId" class="form-control" />
				<span asp-validation-for="@tas.RouteTemplateId" class="text-danger"></span>
			</div>
		</div>
		<div class="col-md-4">
			<div class="form-group">
				<label asp-for="@tas.RouteItemIndex" class="control-label"></label>
				<input asp-for="@tas.RouteItemIndex" class="form-control" />
				<span asp-validation-for="@tas.RouteItemIndex" class="text-danger"></span>
			</div>
			<div class="form-group">
				<label asp-for="@tas.NodeId" class="control-label"></label>
				<input asp-for="@tas.NodeId" class="form-control" />
				<span asp-validation-for="@tas.NodeId" class="text-danger"></span>
			</div>

		</div>
	</div>
}

