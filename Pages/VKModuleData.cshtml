@page
@model Gravitas.Monitoring.Pages.VKModuleDataModel
@{
}
<br />
<div class="row">
	<div class="col-3">
		<center>
			<h3>
				VK-Module Socket 1
			</h3>
		</center>
		<div class="yozhstyle1 brdr1sb" style=" height: 600px; overflow: auto;">
			@foreach (string[] s in Model.Devices1)
			{
				<form method="post" class="m-1">
					<input type="hidden" asp-for="SelectedDevice" value="@s[0]" />
					<input type="hidden" asp-for="SelectedDeviceIP" value="@s[2]" />
					@if (s[0] == Model.SelectedDevice)
					{
						<button type="submit" class="btn btn-primary w-100" title="@s[2]">@s[1]</button>
					}
					else
					{
						<button type="submit" class="btn btn-outline-primary w-100" title="@s[2]">@s[1]</button>
					}
				</form>
			}
		</div>
	</div>
