	<div class="col-3">
		<center>
			<h3>
				Результат
			</h3>
		</center>
		<div class="" style=" height: 530px;">
			<center>
				<h4>Id: @Model.SelectedDevice</h4>
			</center>
			<br />
			<center>
				<table class="yozhstyle1" style="display: inline-block;">
					@foreach (string[] ss in Model.DeviceDataList)
					{
						<tr>
							<td class="brdr1sb">
								@ss[0]
							</td>
							@if (ss[1] == "1" || ss[1]=="dn")
							{
								<td class="brdr1sb" style="background-color: lime">
									@ss[1]
								</td>
							}
							else
							{
								<td class="brdr1sb">
									@ss[1]
								</td>
							}
						</tr>
					}
				</table>
			</center>
		</div>
		<br />
